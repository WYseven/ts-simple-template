{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "jsxFactory": "createElement",
    "lib": [
      "esnext",
      "dom"
    ],
    "outDir": "dist",
    "strict": true,
    "strictFunctionTypes": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "noUnusedLocals": true,
    "types": [ "node" ]
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
  "include": [
    "./src/**/*"
  ]
}